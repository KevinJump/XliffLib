<xml>
<xliff>
  <file> <!-- Might be more than one -->

    <header> <!-- contains metadata about the file and its localization process -->
    </header>

    <body> <!-- contains the structure and the actual content -->
      <group> <!-- can be recursively nested -->
        <trans-unit> <!-- textual translation units -->
          <source> <!-- actual source -->
          </source>
          <target> <!-- final translation -->
          </target>
          <alt-trans> <!-- possible translation from MT -->
          </alt-trans>
        </trans-unit>

        <bin-unit> <!-- binary translation units -->
        </bin-unit>
      </group>
    </body>

  </file>
</xliff>
